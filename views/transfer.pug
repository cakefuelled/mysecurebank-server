extends layout

block content
  .page-header
    h3 Transfer Money to your undeserving friends!

  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label(class='col-sm-2 control-label', for='recipient') Recipient
      .col-sm-8
        input.form-control(type='text', name='recipient', id='recipient', autofocus=true)
    .form-group
      label(class='col-sm-2 control-label', for='amount') amount
      .col-sm-8
        input.form-control(type='text', name='amount', id='amount')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-primary(type='submit')
          i.fa.fa-envelope
          | Send
